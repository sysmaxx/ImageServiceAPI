{
  "ConnectionStrings": {
    "SQLServer": "Server=.\\SQLExpress;Database=ImageDB;Trusted_Connection=True;"
  },
  "ImageServiceConfiguration": {
    "DefaultPath": "F:\\Images",
    "SupportedMimeTypes": [
      "image/jpeg",
      "image/png",
      "image/bmp"
    ],
    "BufferSize": 65536,
    "ResizeUploadImageLongEdge" : 1200
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
